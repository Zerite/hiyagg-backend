{
  "name": "hiyagg-backend",
  "version": "1.0.0",
  "description": "Fastify backend for Hiya.gg - powering connections, data, and authentication",
  "author": "Zerite Development",
  "license": "AGPL-3.0",
  "type": "module",
  "scripts": {
    "prepare": "husky install",
    "start": "pnpm run --silent build && node ./dist/index.js",
    "build": "tsc",
    "dev": "ts-node --esm --experimentalSpecifierResolution=node src/index.ts",
    "dev:watch": "nodemon src/index.ts",
    "lint": "pnpm run --silent lint:prettier && npm run --silent lint:eslint",
    "lint:prettier": "prettier -w \"src/**/*.{js,jsx,ts,tsx}\" -u",
    "lint:eslint": "eslint --fix \"src/**/*.{js,jsx,ts,tsx}\"",
    "prisma:generate": "pnpm prisma generate",
    "prisma:migrate": "pnpm prisma migrate dev"
  },
  "dependencies": {
    "@fastify/auth": "^3.0.1",
    "@fastify/cookie": "^7.0.0",
    "@fastify/jwt": "^6.1.0",
    "@fastify/sensible": "^5.0.0",
    "@fastify/swagger": "^7.3.0",
    "@prisma/client": "^3.15.2",
    "@sinclair/typebox": "^0.23.5",
    "argon2": "^0.28.5",
    "centra": "^2.5.0",
    "email-validator": "^2.0.4",
    "fast-jwt": "^1.6.0",
    "fastify": "^4.0.3",
    "fastify-decorators": "^3.12.0",
    "fastify-plugin": "^3.0.1",
    "pino": "^8.0.0",
    "pino-pretty": "^8.0.0",
    "prisma": "^3.15.2",
    "simple-oauth2": "^4.3.0"
  },
  "devDependencies": {
    "@tsconfig/node16": "^1.0.3",
    "@types/centra": "^2.2.0",
    "@types/node": "^18.0.0",
    "@types/simple-oauth2": "^4.1.1",
    "@typescript-eslint/eslint-plugin": "^5.28.0",
    "@typescript-eslint/parser": "^5.28.0",
    "eslint": "^8.18.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.2",
    "nodemon": "^2.0.16",
    "prettier": "^2.7.1",
    "ts-node": "^10.8.1",
    "typescript": "^4.7.4"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": "npm run lint"
  },
  "nodemonConfig": {
    "ignore": [
      "build",
      "node_modules",
      "docker",
      "http"
    ],
    "ext": "*",
    "verbose": true,
    "execMap": {
      "ts": "ts-node --esm --experimentalSpecifierResolution=node"
    }
  }
}
